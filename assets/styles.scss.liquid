
// VARIABLES
$grey: #7c7c7c;
$light-grey: #f0f1f2;
$hl-color: {{ settings.hl_color }};
$hero: url({{ settings.hero_image | img_url: '2048x2048' }});
$font-family: {{ settings.font_family }};

{% if settings.font_family %}
body {
	font-family: $font-family;
}
{% else %} 
body {
	font-family: cursive;
}
{% endif %}

//headers 
.header--large {
	height: 50vh;
	display:flex;
	{% if settings.hero_image %} //will default to true
		background: $hero;
	{% else %}
		background: $light-grey;
	{% endif %}
	background-repeat: no-repeat;
	background-size: cover;
	h1 {
		margin: auto;
	}
}

//ELEMENTS
.page-content {
	min-height: 80vh;
}
.btn {
	background: black;
	padding: 10px 20px;
	color: white;
	border: none;
	&:hover {
		background: $hl-color;
	}
}
a.btn {
	text-decoration: none;
}

.btn.sold-out {
	background: lighten(black, 5%);
	&:hover {
		background: lighten(black, 5%);
	}
}

.modal {
	width: 60%;
	max-width: 600px;
	padding: 40px;
	border: 10px solid $hl-color;
	position: fixed;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	background: white;
	.close {
		position: absolute;
		top: 20px;
		right: 20px;
		color: $hl-color;
		font-size: 24px;
		cursor: pointer;
	}
}

form {
	label {
		margin-bottom: 6px;
		display: block;
	}
	input, select {
		width: 100%;
		padding: 10px 12px;
		background: $light-grey;
		border: none;
		margin-bottom: 12px;
	}
	select {
		-webkit-appearance: none;
		-moz-appearance: none;
		appearance: none;
		border-radius: 0;
	}
	input[type="submit"] {
		background: black;
		color: white;
		&:hover {
			background: $hl-color;
		}
	}

}

.shipping-calculator {
	padding: 20px;
	// width: 80%;
	margin-bottom: 40px;
	background: hsla(210, 7%, 95%, 0.58);
}

// GENERAL

.hidden {
	display: none;
}

a {
	transition: 0.3s all ease;
}

table {
	width: 100%;
	th {
		text-align: left;
		padding: 10px;
	}
	td {
		padding: 10px;
	}
	tr + tr {
		border-top: 1px solid black;
	}
	a {
		color: black;
	}
}
//navigation (main)
nav.main {
	background: white;
	ul {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		justify-content: space-between;

		li {
			flex: 1 0 50px;
			text-align: center;
			padding: 30px 2px;
		}

		li.current {
			a {
				border-bottom: 5px solid $hl-color;
			}
		}

		a {
			display:inline-block;
			color: black;
			text-decoration: none;
			border-bottom: 5px solid white;
			padding: 2px;
			&:hover {
				border-bottom: 5px solid $hl-color;
			}
		}
	}
}

footer {
	background: black;
	padding: 20px 0;
	ul {
		list-style: none;
		padding: 0;
		margin: 0;
		a {
			color: white;
			text-decoration: none;
		}
	}
}

#footer {
	height: 150px;
	width: 100%;
}



//GENERICS

.wrapper {
	width: 80%;
	max-width: 1020px;
	margin: 0 auto;
}

.wrapper--flex {
	display: flex;
	flex-wrap: wrap;
	&.flex--spaced {
		justify-content: space-between;
	}
}




//HOME PAGE
.product-loop--item {
	flex: 0 0 240px;
	margin-bottom: 20px;
	img {
		width: 100%;
	}
	a {
		color: black;
		text-decoration: none;
	}
}


//PRODUCT PAGE
.product-single {
	.wrapper {
		align-items: center;
	}
	img {
		width: 50%;
		flex: 1 0 300px;
	}
	.product-details {
		padding: 0 20px;
		flex: 1 0 250px;
	}
	.tag-list {
		margin: 0 0 20px 0;
		padding: 0;
		list-style: none;
		li {
			background: $hl-color;
			color: white;
			padding: 10px;
			margin-right: 8px;
			display: inline-block;
		}
	}
}

//CART

.cart-options {
	padding: 40px 0;
	input[type="submit"] {
		display: inline-block;
		max-width: 200px;
	}
}

