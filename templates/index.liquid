<!-- create a new variable collection and set it to the frontpage collection or whatever collection you want to display on your homepage -->
{% assign collection = collections.frontpage %}
<header class="header--large">
	<!-- include the name of your shop -->
	<h1>{{ shop.name }}</h1>
</header>
{% paginate collection.products by 8 %}
	<!-- display the collection title for your front page collection and some or all of the products from the front page collection -->
	<div class="wrapper">
		<div class="featured-gallery">
			{% section 'gallery' %}
		</div>
		<h2>{{ collection.title }}</h2>
			<!-- display the products from your frontpage collection (or whichever colleciton you elected to feature on the homepage). **HINT** try using the product loop snippet for the product information -->
				<div class="wrapper--flex flex--spaced">
				  {% for product in collection.products %}
				    {% include 'product-loop' %}
				  {% endfor %}
				</div>

			<!-- if there are multiple pages, show pagination links -->
			{% if paginate.pages > 1 %}
				<div class="pagination text-center margin-bottom-30">
				  <p>{{ paginate | default_pagination }}</p>
				</div>
			{% endif %}
	</div>
{% endpaginate %}
